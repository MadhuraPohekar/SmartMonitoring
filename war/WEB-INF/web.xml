<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">


	<!--Alerts -->
	<servlet>
		<servlet-name>alertsService</servlet-name>
		<servlet-class>com.smexec.monitor.server.services.rpc.impl.AlertsServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>alertsService</servlet-name>
		<url-pattern>/alertsService</url-pattern>
	</servlet-mapping>

	<!--Configuration -->
	<servlet>
		<servlet-name>configurationService</servlet-name>
		<servlet-class>com.smexec.monitor.server.services.rpc.impl.ConfigurationServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>configurationService</servlet-name>
		<url-pattern>/configurationService</url-pattern>
	</servlet-mapping>

	<!--General -->
	<servlet>
		<servlet-name>generalService</servlet-name>
		<servlet-class>com.smexec.monitor.server.services.rpc.impl.GeneralServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>generalService</servlet-name>
		<url-pattern>/generalService</url-pattern>
	</servlet-mapping>

	<!--Servers Widget -->
	<servlet>
		<servlet-name>serverWidgetService</servlet-name>
		<servlet-class>com.smexec.monitor.server.services.rpc.impl.ServerWidgetServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>serverWidgetService</servlet-name>
		<url-pattern>/serverWidgetService</url-pattern>
	</servlet-mapping>

	<!--Smart Executor -->
	<servlet>
		<servlet-name>smartExecutorService</servlet-name>
		<servlet-class>com.smexec.monitor.server.services.rpc.impl.SmartExecutorServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>smartExecutorService</servlet-name>
		<url-pattern>/smartExecutorService</url-pattern>
	</servlet-mapping>

	<!-- -->
	<servlet>
		<servlet-name>alertsExporter</servlet-name>
		<servlet-class>com.smexec.monitor.server.servlets.AlertsExporter</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>alertsExporter</servlet-name>
		<url-pattern>/exp_alerts</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>Smartmonitoring.html</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>com.smexec.monitor.server.ServerStartUp</listener-class>
	</listener>


</web-app>
