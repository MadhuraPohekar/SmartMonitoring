		</group>
	</serverGroups>
	
	<servers>
		<server>
			<name>Local (1)</name>
			<serverCode>15</serverCode>
			<ip>127.0.0.1</ip>
			<jmxPort>9010</jmxPort>
			<authenticate>true</authenticate>
			<username>admin</username>
			<password>password</password>
			<serverGroup>special</serverGroup>
		</server>

